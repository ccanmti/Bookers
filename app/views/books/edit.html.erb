<%= flash[:notice] %>

<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <label>title</label>
  <%= f.text_field :title %>

  <label>Body</label>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

<% end %>

<span><%= link_to "Show", book_path(@book.id) %></span>
<p>|</p>
<span><%= link_to "Back", books_path %></span>